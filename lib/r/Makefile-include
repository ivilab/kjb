
################################################################################
#                             Options

# For programs, speical purpose compile options are set in Makefile-2. For
# library modules, the must go in Makefile-include. 
#
# For example, to force no optimization for C compiles, replace CC_FLAGS with
# DONT_OPTIMIZE_CC_FLAGS. 
#     
# To force a C99 compile in an emergency, replace
#     $(CC_FLAGS)
# below with 
#      $(CC_C99_BASE_FLAGS) $(CC_TEST_OR_OPTIMIZE)
# In developing KJB library code for the U.A. vision lab, this capability MUST
# BE USED ONLY FOR TRANSITION. 
#
################################################################################

R_LIB_CC_FLAGS = $(CC_FLAGS)
R_LIB_CC_WARNING_FLAGS = $(CC_KJB_WARNINGS)
R_LIB_CXX_FLAGS = $(CXX_FLAGS)
R_LIB_CXX_WARNING_FLAGS = $(CXX_KJB_WARNINGS)
R_LIB_EXTRA_COMPILE_FLAGS =

################################################################################

R_LIB_PREFIX = r
R_LIB_UC_PREFIX = R

R_LIB_SRC_DIR = $(R_DIR)
R_LIB_REAL_SRC_DIR = $(REAL_R_DIR)

R_LIB_ARCHIVE = $(R_DIR)$(OBJ_DIR)libKJBr.a
R_LIB_LD = -L$(R_DIR)$(OBJ_DIR) -lKJBr 

################################################################################

$(R_DIR)Makefile-library.$(MAKE_FLAVOR) : $(MAKE_DIR)Makefile-library.$(MAKE_FLAVOR)
	sed 's/LIB_COMPONENT/R_LIB/g' < $< > $@

include $(R_DIR)Makefile-library.$(MAKE_FLAVOR)

################################################################################

$(R_DIR)Makefile-library : $(MAKE_DIR)Makefile-library
	sed 's/LIB_COMPONENT/R_LIB/g' < $< > $@

include $(R_DIR)Makefile-library

