
################################################################################
#                             Options

# For programs, speical purpose compile options are set in Makefile-2. For
# library modules, the must go in Makefile-include. 
#
# For example, to force no optimization for C compiles, replace CC_FLAGS with
# DONT_OPTIMIZE_CC_FLAGS. 
#     
# To force a C99 compile in an emergency, replace
#     $(CC_FLAGS)
# below with 
#      $(CC_C99_BASE_FLAGS) $(CC_TEST_OR_OPTIMIZE)
# In developing KJB library code for the U.A. vision lab, this capability MUST
# BE USED ONLY FOR TRANSITION. 
#
################################################################################

SAMPLE_CPP_LIB_CC_FLAGS = $(CC_FLAGS)
SAMPLE_CPP_LIB_CC_WARNING_FLAGS = $(CC_KJB_WARNINGS)
SAMPLE_CPP_LIB_CXX_FLAGS = $(CXX_FLAGS)
SAMPLE_CPP_LIB_CXX_WARNING_FLAGS = $(CXX_KJB_WARNINGS)
SAMPLE_CPP_LIB_EXTRA_COMPILE_FLAGS =

################################################################################

SAMPLE_CPP_LIB_PREFIX = sample_cpp
SAMPLE_CPP_LIB_UC_PREFIX = SAMPLE_CPP

SAMPLE_CPP_LIB_SRC_DIR = $(SAMPLE_CPP_DIR)
SAMPLE_CPP_LIB_REAL_SRC_DIR = $(REAL_SAMPLE_CPP_DIR)

SAMPLE_CPP_LIB_ARCHIVE = $(SAMPLE_CPP_DIR)$(OBJ_DIR)libKJBsample_cpp.a
SAMPLE_CPP_LIB_LD = -L$(SAMPLE_CPP_DIR)$(OBJ_DIR) -lKJBsample_cpp 

################################################################################

$(SAMPLE_CPP_DIR)Makefile-library.$(MAKE_FLAVOR) : $(MAKE_DIR)Makefile-library.$(MAKE_FLAVOR)
	sed 's/LIB_COMPONENT/SAMPLE_CPP_LIB/g' < $< > $@

include $(SAMPLE_CPP_DIR)Makefile-library.$(MAKE_FLAVOR)

################################################################################

$(SAMPLE_CPP_DIR)Makefile-library : $(MAKE_DIR)Makefile-library
	sed 's/LIB_COMPONENT/SAMPLE_CPP_LIB/g' < $< > $@

include $(SAMPLE_CPP_DIR)Makefile-library

