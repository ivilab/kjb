
################################################################################
#                             Options

# For programs, speical purpose compile options are set in Makefile-2. For
# library modules, the must go in Makefile-include. 
#
# For example, to force no optimization for C compiles, replace CC_FLAGS with
# DONT_OPTIMIZE_CC_FLAGS. 
#     
# To force a C99 compile in an emergency, replace
#     $(CC_FLAGS)
# below with 
#      $(CC_C99_BASE_FLAGS) $(CC_TEST_OR_OPTIMIZE)
# In developing KJB library code for the U.A. vision lab, this capability MUST
# BE USED ONLY FOR TRANSITION. 
#
################################################################################

ST_CPP_LIB_CC_FLAGS = $(CC_FLAGS)
ST_CPP_LIB_CC_WARNING_FLAGS = $(CC_KJB_WARNINGS)
ST_CPP_LIB_CXX_FLAGS = $(CXX_FLAGS)
ST_CPP_LIB_CXX_WARNING_FLAGS = $(CXX_KJB_WARNINGS)
ST_CPP_LIB_EXTRA_COMPILE_FLAGS =

################################################################################

ST_CPP_LIB_PREFIX = st_cpp
ST_CPP_LIB_UC_PREFIX = ST_CPP

ST_CPP_LIB_SRC_DIR = $(ST_CPP_DIR)
ST_CPP_LIB_REAL_SRC_DIR = $(REAL_ST_CPP_DIR)

ST_CPP_LIB_ARCHIVE = $(ST_CPP_DIR)$(OBJ_DIR)libKJBst_cpp.a
ST_CPP_LIB_LD = -L$(ST_CPP_DIR)$(OBJ_DIR) -lKJBst_cpp 

################################################################################

$(ST_CPP_DIR)Makefile-library.$(MAKE_FLAVOR) : $(MAKE_DIR)Makefile-library.$(MAKE_FLAVOR)
	sed 's/LIB_COMPONENT/ST_CPP_LIB/g' < $< > $@

include $(ST_CPP_DIR)Makefile-library.$(MAKE_FLAVOR)

################################################################################

$(ST_CPP_DIR)Makefile-library : $(MAKE_DIR)Makefile-library
	sed 's/LIB_COMPONENT/ST_CPP_LIB/g' < $< > $@

include $(ST_CPP_DIR)Makefile-library

