
################################################################################
#                             Options

# For programs, speical purpose compile options are set in Makefile-2. For
# library modules, the must go in Makefile-include. 
#
# For example, to force no optimization for C compiles, replace CC_FLAGS with
# DONT_OPTIMIZE_CC_FLAGS. 
#     
# To force a C99 compile in an emergency, replace
#     $(CC_FLAGS)
# below with 
#      $(CC_C99_BASE_FLAGS) $(CC_TEST_OR_OPTIMIZE)
# In developing KJB library code for the U.A. vision lab, this capability MUST
# BE USED ONLY FOR TRANSITION. 
#
################################################################################

WRAP_CLFFT_LIB_CC_FLAGS = $(CC_FLAGS)
WRAP_CLFFT_LIB_CC_WARNING_FLAGS = $(CC_KJB_WARNINGS)
WRAP_CLFFT_LIB_CXX_FLAGS = $(CXX_FLAGS)
WRAP_CLFFT_LIB_CXX_WARNING_FLAGS = $(CXX_KJB_WARNINGS)
WRAP_CLFFT_LIB_EXTRA_COMPILE_FLAGS =

################################################################################

WRAP_CLFFT_LIB_PREFIX = wrap_clfft
WRAP_CLFFT_LIB_UC_PREFIX = WRAP_CLFFT

WRAP_CLFFT_LIB_SRC_DIR = $(WRAP_CLFFT_DIR)
WRAP_CLFFT_LIB_REAL_SRC_DIR = $(REAL_WRAP_CLFFT_DIR)

WRAP_CLFFT_LIB_ARCHIVE = $(WRAP_CLFFT_DIR)$(OBJ_DIR)libKJBwrap_clfft.a
WRAP_CLFFT_LIB_LD = -L$(WRAP_CLFFT_DIR)$(OBJ_DIR) -lKJBwrap_clfft 

################################################################################

$(WRAP_CLFFT_DIR)Makefile-library.$(MAKE_FLAVOR) : $(MAKE_DIR)Makefile-library.$(MAKE_FLAVOR)
	sed 's/LIB_COMPONENT/WRAP_CLFFT_LIB/g' < $< > $@

include $(WRAP_CLFFT_DIR)Makefile-library.$(MAKE_FLAVOR)

################################################################################

$(WRAP_CLFFT_DIR)Makefile-library : $(MAKE_DIR)Makefile-library
	sed 's/LIB_COMPONENT/WRAP_CLFFT_LIB/g' < $< > $@

include $(WRAP_CLFFT_DIR)Makefile-library

